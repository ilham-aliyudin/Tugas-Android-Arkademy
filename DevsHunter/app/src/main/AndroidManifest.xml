<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.devshunter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Material">
        <activity android:name="com.example.devshunter.ui.dashboard.fragment.project.FormAddProjectActivity" />
        <activity android:name=".ui.engineerprofiledetail.EngineerProfileDetail" />
        <activity android:name=".ui.dashboard.DashboardActivity" />
        <activity android:name=".ui.register.RegisterAsDevsActivity" />
        <activity android:name=".ui.profile.RecruiterProfileActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.Material" />
        <activity android:name=".ui.introslider.IntroSliderActivity" />
        <activity android:name=".ui.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>