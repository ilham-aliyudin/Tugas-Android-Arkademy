<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Material" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="fontFamily">@font/firamono_regular</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimary">@color/secondaryDarkColor</item>
    </style>

    <style name="AppTheme.Material.WithActionBar" parent="Theme.MaterialComponents.Light">
        <item name="fontFamily">@font/firamono_regular</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="colorPrimaryDark">#730385</item>
    </style>

    <style name="Widget.Design.TextInputLayout.Outlined" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">20dp</item>
        <item name="boxCornerRadiusBottomStart">20dp</item>
        <item name="boxCornerRadiusTopEnd">20dp</item>
        <item name="boxCornerRadiusBottomEnd">20dp</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeColor">#730385</item>
        <item name="hintTextColor">@color/colorBlue</item>
        <item name="fontFamily">@font/firamono_regular</item>
    </style>
</resources>

