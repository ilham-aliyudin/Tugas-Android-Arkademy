<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#164A1C1C"
        android:orientation="vertical"
        tools:context=".ui.profile.RecruiterProfileActivity">


        <EditText
            android:id="@+id/et_recruiter_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Phone"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_email"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_email"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_email" />

        <EditText
            android:id="@+id/et_recruiter_linked_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Linked In"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_phone"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_phone"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_phone" />

        <EditText
            android:id="@+id/et_recruiter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162" />

        <EditText
            android:id="@+id/et_recruiter_jobdesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Jobdesc"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_name"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_name"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_name" />

        <EditText
            android:id="@+id/et_recruiter_adresss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Adress"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_jobdesc"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_jobdesc"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_jobdesc" />

        <EditText
            android:id="@+id/et_recruiter_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_adresss"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_adresss"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_adresss" />

        <EditText
            android:id="@+id/et_recruiter_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_desc"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_desc"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_desc" />

        <Button
            android:id="@+id/btn_recruiter_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Simpan"
            app:layout_constraintEnd_toEndOf="@+id/et_recruiter_linked_in"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/et_recruiter_linked_in"
            app:layout_constraintTop_toBottomOf="@+id/et_recruiter_linked_in" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>