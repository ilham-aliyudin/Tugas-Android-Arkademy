                <!--                    android:id="@+id/progress_bar"-->
                <!--                    style="@style/Widget.MaterialComponents.ProgressIndicator.Circular.Indeterminate"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
